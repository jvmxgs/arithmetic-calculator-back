{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "rootDir": "./src",
      "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "__tests__",
  ]
}
