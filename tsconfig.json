{
  "compilerOptions": {
      "lib": ["ES2018"],
      "target": "ES2018",
      "module": "commonjs",
      "strict": true,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "__tests__/**/*.test.ts",
  ]
}
